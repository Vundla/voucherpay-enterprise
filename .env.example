# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=voucherpay_enterprise
DB_USER=voucherpay_user
DB_PASSWORD=your_secure_password

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_DEBUG=True
FASTAPI_SECRET_KEY=your_fastapi_secret_key_here

# Node.js Configuration
NODEJS_HOST=0.0.0.0
NODEJS_PORT=3000
NODEJS_DEBUG=true
NODEJS_SECRET_KEY=your_nodejs_secret_key_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@voucherpay.com
EMAIL_USE_TLS=true

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Accessibility Configuration
ACCESSIBILITY_AUDIT_ENABLED=true
ACCESSIBILITY_LOG_LEVEL=INFO
WCAG_COMPLIANCE_LEVEL=AA

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
REAL_TIME_ANALYTICS=true

# Security Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CORS_ORIGINS=http://localhost:4200,https://voucherpay.com
SECURITY_HEADERS_ENABLED=true

# 2FA Configuration
TOTP_ISSUER=VoucherPay Enterprise
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Environment
NODE_ENV=development
ENVIRONMENT=development